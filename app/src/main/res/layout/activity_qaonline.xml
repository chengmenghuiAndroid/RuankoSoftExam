<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FloralWhite"
    android:orientation="vertical"
    tools:context="com.itee.exam.app.ui.QAOnline">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:singleLine="true"
            android:text="软考电话"
            android:textColor="@color/Indigo"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:lineSpacingMultiplier="1.2"
            android:singleLine="true"
            android:text="武汉:027-87746649"
            android:textColor="@color/Black"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:lineSpacingMultiplier="1.2"
            android:singleLine="true"
            android:text="深圳:0755-86270028"
            android:textColor="@color/Black"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:lineSpacingMultiplier="1.2"
            android:singleLine="true"
            android:text="全国:400-659-0018"
            android:textColor="@color/Black"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:lineSpacingMultiplier="1.2"
            android:singleLine="true"
            android:text="软考邮箱"
            android:textColor="@color/Indigo"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:lineSpacingMultiplier="1.2"
            android:singleLine="true"
            android:text="uprogram@ruanko.com"
            android:textColor="@color/Black"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:lineSpacingMultiplier="1.2"
            android:singleLine="true"
            android:text="软考QQ群"
            android:textColor="@color/Indigo"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:lineSpacingMultiplier="1.2"
            android:singleLine="true"
            android:text="251395849"
            android:textColor="@color/Black"
            android:textSize="14sp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:onClick="funQQContent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerInside"
                android:src="@drawable/qqcontent_h" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="在线客服"
                android:lineSpacingMultiplier="1.2"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/Black"
                android:textSize="14sp"
                android:textStyle="normal"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
