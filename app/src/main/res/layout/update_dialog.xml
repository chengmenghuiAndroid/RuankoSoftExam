<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/update_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:singleLine="true"
        android:text="软件更新提示"
        android:textColor="@color/money_text"
        android:textSize="@dimen/big_font" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/update_dialog_title"
        android:scrollbars="none">

        <TextView
            android:id="@+id/update_dialog_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:lineSpacingMultiplier="1.2"
            android:text="软件更新内容：\n1、更新条目一\n2、更新条目二\n3、更新条目三"
            android:textColor="@color/normal_font"
            android:textSize="@dimen/explain_font" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/update_dialog_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:id="@+id/btn_update_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/update_dialog_cancel"
            android:text="下次再说"
            android:textColor="@color/normal_font"
            android:textSize="@dimen/explain_font" />

        <Button
            android:id="@+id/btn_update_dialog_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/update_dialog_ok"
            android:text="立即更新"
            android:textColor="@color/white"
            android:textSize="@dimen/explain_font" />
    </LinearLayout>
</LinearLayout>