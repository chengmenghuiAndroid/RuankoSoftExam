<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.itee.exam.app.ui.signup.PhotoUploadActivity">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="funBrowse"
            android:text="浏览"
            android:textColor="@color/Black"
            android:textSize="@dimen/explain_font"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_photo_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:singleLine="true"
            android:text="未选择文件"
            android:textColor="@color/Black"
            android:textSize="@dimen/normal_font"
            android:textStyle="normal" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_user_photo"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerInside"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:lineSpacingMultiplier="1.2"
        android:singleLine="true"
        android:text="电子照片要求"
        android:textColor="@color/Black"
        android:textSize="@dimen/explain_font"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:lineSpacingMultiplier="1.2"
        android:text="@string/photo_info"
        android:textColor="@color/Black"
        android:textSize="@dimen/normal_font"
        android:textStyle="normal" />

    <Button
        android:id="@+id/btn_photo_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:onClick="funPhotoUpload"
        android:text="上传"
        android:textColor="@color/Black"
        android:textSize="@dimen/explain_font"
        android:textStyle="normal"
        android:visibility="gone" />
</LinearLayout>
