<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_corners_default"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:singleLine="true"
        android:background="@drawable/exit_dialog_title"
        android:text="注销账号"
        android:textColor="@color/money_text"
        android:textSize="@dimen/big_font" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#DBDBDB" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="10dp"
        android:lineSpacingMultiplier="1.2"
        android:text="退出登录后，将会导致系统很多功能无权使用，是否确认退出？"
        android:gravity="center_vertical"
        android:textColor="@color/normal_font"
        android:textSize="@dimen/toolbar_font" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#DBDBDB" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_exit_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/exit_dialog_cancel"
            android:text="取消"
            android:textColor="@color/normal_font"
            android:textSize="@dimen/toolbar_font" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#DBDBDB" />

        <Button
            android:id="@+id/btn_exit_dialog_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/exit_dialog_ok"
            android:text="确认退出"
            android:textColor="@color/normal_font"
            android:textSize="@dimen/toolbar_font" />
    </LinearLayout>

</LinearLayout>